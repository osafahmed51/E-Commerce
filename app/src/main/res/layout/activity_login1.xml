<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_main"
    tools:context="com.example.alibaba.Buyer.login1_activity">

    <TextView
        android:id="@+id/textv_for_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:padding="50dp"
        android:text="E-Royal Mart"
        android:textColor="#676262"
        android:textSize="40sp"
        android:textStyle="bold|italic"

        />

    <EditText
        android:id="@+id/phone_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="350dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/inputs"
        android:hint="Phone"
        android:inputType="number"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_login"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/inputs"
        android:hint="Password"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/login_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_login"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <com.rey.material.widget.CheckBox
            android:id="@+id/checkbox_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/inputs"
            android:checked="false"
            android:text="Remember me"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/forget_text_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/inputs"
            android:padding="03dp"
            android:text="Forget Password?"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <Button
        android:id="@+id/login_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_linearlayout"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textStyle="italic|bold"

        />

    <TextView
        android:id="@+id/i_am_admin_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn1"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/inputs"
        android:padding="03dp"
        android:text="I am Admin"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/i_am_not_admin_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn1"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/inputs"
        android:padding="03dp"
        android:text="I am not Admin"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:visibility="invisible"
         />
</RelativeLayout>