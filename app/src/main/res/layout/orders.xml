<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="15dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/order_username"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="User Name"
            android:textSize="14dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/order_phoneNumber"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="-50dp"
            android:text="Phone Number"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_phoneNumber"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Total Price"
            android:textSize="14dp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/order_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_price"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Address , City"
            android:textSize="14dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/order_DateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_Address"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Date , Time"
            android:textSize="14dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/showOrderbtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/order_DateTime"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Show order Products"
            android:background="@drawable/buttons"

            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>