<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller.SellerRegersterForm">

    <ImageView
        android:id="@+id/imagevSellerReg"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/seller"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/sellerregTxtV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seller Registration Form"
        android:gravity="center"
        android:layout_below="@id/imagevSellerReg"
        android:layout_marginTop="20dp"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#669C38"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameSellerRegst"
        android:layout_below="@id/sellerregTxtV"
        android:hint="Name..."
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textSize="16dp"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phoneSellerRegst"
        android:layout_below="@id/nameSellerRegst"
        android:hint="Phone..."
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textSize="16dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailSellerRegst"
        android:layout_below="@id/phoneSellerRegst"
        android:hint="Email..."
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textSize="16dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordSellerRegst"
        android:layout_below="@id/emailSellerRegst"
        android:hint="Password"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textSize="16dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addressShopSellerRegst"
        android:layout_below="@id/passwordSellerRegst"
        android:hint="Shop - Bussiness Address..."
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textSize="16dp"

        />

    <Button
        android:id="@+id/registerSellerRegstr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addressShopSellerRegst"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="18dp"

        />

    <Button
        android:id="@+id/AlreadyAccountRegSell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerSellerRegstr"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/buttons"
        android:text="Already Have an Account?"
        android:textAllCaps="false"
        android:textSize="18dp"

        />


</RelativeLayout>