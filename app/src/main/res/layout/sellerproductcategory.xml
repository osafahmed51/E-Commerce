<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller.sellerProductCategory">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slogan_category"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:text="Add New Products"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Linear1_layout_admincateg"
        android:orientation="horizontal"
        android:layout_below="@id/slogan_category"
        android:layout_marginTop="15dp"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:id="@+id/fmale1"
            android:src="@drawable/f2"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/fmale2"
            android:src="@drawable/f1"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:id="@+id/t_shirt_categ"
            android:src="@drawable/tshrt"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:id="@+id/sweater_categ"
            android:src="@drawable/sweater"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Linear2_layout_admincateg"
        android:orientation="horizontal"
        android:layout_below="@id/Linear1_layout_admincateg"
        android:layout_marginTop="15dp"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:id="@+id/glasses_categ"
            android:src="@drawable/glasses"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:id="@+id/bags_categ"
            android:src="@drawable/purses"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/hats_categ"
            android:src="@drawable/hat"
            />
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/shoes_categ"
            android:src="@drawable/shoes"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Linear3_layout_admincateg"
        android:orientation="horizontal"
        android:layout_below="@id/Linear2_layout_admincateg"
        android:layout_marginTop="15dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/headphones_categ"
            android:src="@drawable/hphones"
            />
        <ImageView
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:id="@+id/laptops_categ"
            android:layout_marginTop="25dp"
            android:src="@drawable/lptops"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:id="@+id/watch_categ"
            android:src="@drawable/watch"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:id="@+id/mobilels_categ"
            android:src="@drawable/mobiles"
            />

    </LinearLayout>

</RelativeLayout>