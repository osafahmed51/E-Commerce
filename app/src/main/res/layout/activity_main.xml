<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_main"
    tools:context=".Buyer.MainActivity">

    <ImageView
        android:id="@+id/applogo"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/shopiing" />
    <TextView
        android:id="@+id/txtv_activity1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text=" Find , Discover,  Select any thing to Order"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/applogo"
        android:layout_marginTop="30dp"
        android:textColor="#292626"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/txtv_activity1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="E-Royal Mart"
        android:textColor="#3C3939"
        android:textSize="18sp"
        android:textStyle="bold|italic" />
    <Button
        android:id="@+id/join_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_btn1"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/inputs"
        android:padding="20dp"
        android:text="Join Now"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="italic|bold" />

    <Button
        android:id="@+id/login_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_above="@id/SellerOnMainActivity"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/buttons"
        android:padding="20dp"
        android:text="Already have an Account? Login"
        android:textAllCaps="false"
        android:textStyle="italic|bold"

        />


    <TextView
        android:id="@+id/SellerOnMainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:text="Wants to Become Seller?"
        android:textColor="#FFFCFC"
        android:textSize="18sp"
        android:textStyle="normal" />

</RelativeLayout>