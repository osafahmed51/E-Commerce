<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.ProductDetailsActivity2">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearlayout111"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:id="@+id/product_details2_imgv"
        android:scaleType="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_name_details2"
        android:layout_below="@id/product_details2_imgv"
        android:text="Product Name"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_desc_details2"
        android:layout_below="@id/product_name_details2"
        android:text="Product Description"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_Price_details2"
        android:layout_below="@id/product_desc_details2"
        android:text="Product Price"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        />
</LinearLayout>

    <RelativeLayout
        android:id="@+id/linearlayout_plus_minus"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/linearlayout111"
        android:layout_marginTop="50dp"
        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/plus_button_details2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="#C6ACAC"
            android:src="@drawable/plus" />

        <TextView
            android:id="@+id/result_textv"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text=""
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cart_btn_for_details2_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#C6ACAC"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="80dp"
            android:src="@drawable/minus" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/linearlayout_plus_minus"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="Add To Cart"
        android:background="@drawable/buttons"
        />
</RelativeLayout>