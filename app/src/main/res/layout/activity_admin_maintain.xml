<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    tools:context=".Admin.AdminMaintainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">



        <ImageView
            android:id="@+id/ImageV_Maintain"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/camera" />

        <EditText
            android:id="@+id/product_price_Maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ImageV_Maintain"
            android:layout_marginTop="35dp"
            android:background="@drawable/inputs"
            android:padding="5dp"
            android:hint="Product Price"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/product_name_Maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_price_Maintain"
            android:hint="Product Name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@drawable/inputs"
            android:layout_marginTop="35dp"
            android:textSize="20sp"
            android:padding="5dp"
            />
        <EditText
            android:id="@+id/product_desc_Maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name_Maintain"
            android:hint="Product Description"
            android:textAlignment="center"
            android:layout_marginTop="35dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/inputs"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/ApplyChanges_Maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_desc_Maintain"
            android:text="Apply Changes"
            android:textAlignment="center"
            android:layout_marginTop="35dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/buttons"
            android:padding="5dp"
            />
        <Button
            android:id="@+id/Delete_Maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ApplyChanges_Maintain"
            android:text="Delete This Product"
            android:textAlignment="center"
            android:layout_marginTop="35dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@drawable/buttons"
            android:padding="5dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>