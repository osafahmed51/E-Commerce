<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/w2"
    tools:context=".Seller.Selleraddnewproducts_Activity">

    <ImageView
        android:id="@+id/camera_addprod"
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:padding="-10dp"
        android:src="@drawable/c1" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/prod_Name"
        android:layout_below="@id/camera_addprod"
        android:background="@drawable/inputs"
        android:layout_marginLeft="30dp"
        android:hint="Product Name..."
        android:backgroundTint="#A8C8B4A9"
        android:textColorHint="@color/white"
        android:layout_marginTop="30dp"

        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/prod_desc"
        android:layout_below="@id/prod_Name"
        android:background="@drawable/inputs"
        android:layout_marginLeft="30dp"
        android:hint="Product Description"
        android:backgroundTint="#A8C8B4A9"
        android:textColorHint="@color/white"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/prod_price"
        android:layout_below="@id/prod_desc"
        android:background="@drawable/inputs"
        android:layout_marginLeft="30dp"
        android:hint="Product Price"
        android:backgroundTint="#A8C8B4A9"
        android:textColorHint="@color/white"
        android:layout_marginTop="30dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/Add_prod_btn"
        android:layout_below="@id/prod_price"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/buttons"
        android:text="Add Product"
        android:textColor="@color/black"
    />
</RelativeLayout>